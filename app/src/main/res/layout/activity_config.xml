<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.activity.ActivityConfig"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="@string/enderecoIP"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:id="@+id/campoIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:width="230dp"
        android:inputType="numberSigned|phone"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/textViewIP"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"/>

    <Button
        android:id="@+id/botaoSalvar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="@string/salvar"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/campoIP"
        app:layout_constraintEnd_toEndOf="@id/campoIP"/>

</android.support.constraint.ConstraintLayout>